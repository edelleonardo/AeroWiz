                            </div>
                            <div class="row">
                                <SfRadioButton Label="@Answer4" Name="answer" Value="false" Checked="false"></SfRadioButton>
                            </div>
                        </div>

                    </CardContent>
                </SfCard>
            </td>
        </tr>

        <tr>
            <td align="right">
            <SfButton Content="Okay" OnClick="@OnButtonClick"></SfButton>
            </td>
        </tr>
    </table>
