@page "/"


<style>
    .main-container {
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-content: space-evenly;
    }

    .table-container {
        border-spacing: 30px;
        border-collapse: separate;
    }

    .question-card {
    }

    .radio-control {
        margin: 5%;
    }

    .row {
        margin-bottom: 5%;
    }

</style>

<div class="main-container">
    <table class="table-container">
        <tr>
            <td >
                <div class="col-lg-9 col-10 mx-auto">
                    <SfProgressBar Type="ProgressType.Linear" ID="LinearSegment"
                                   Height="30"
                                   Width="100%"
                                   Value="@ProgressValue"
                                   Minimum="0"
                                   Maximum="50"
                                   Theme="Theme.Bootstrap"
                                   CornerRadius="CornerType.Round"
                                   TrackThickness="15"
                                   ProgressThickness="15">
                        <ProgressBarAnimation Enable="true" Duration="100" Delay="0" />
                    </SfProgressBar>
                </div>
            </td>
        </tr>
        <tr>
            <td>

                @*<div class="card">
                    <div class="card-body col-lg-9 col-10 mx-auto">
